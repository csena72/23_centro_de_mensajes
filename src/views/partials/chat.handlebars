<div class="col-md-6 mx-auto text-center mt-2">
    <div class="header-title">
        <h2 class="wv-heading--subtitle">
            Centro de Mensajes
        </h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-8 mx-auto">
        <div class="border rounded mb-3 p-2" id="mensajes"></div>
        <div class="myform form ">
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control my-input" id="email"
                    placeholder="Ingrese email" required>
            </div>
            <div class="form-group">
                <textarea name="textarea" name="price" id="mensaje" class="form-control my-input" id="mensaje"
                    placeholder="Ingresa un mensaje..." required></textarea>
            </div>
            <div class="text-center ">
                <button onclick="enviarMensaje()" type="submit" class=" btn btn-block send-button tx-tfm">Enviar
                    mensaje</button>
            </div>
            <div class="col-md-12 ">
                <div class="login-or">
                    <hr class="hr-or">
                </div>
            </div>

        </div>
    </div>
</div>